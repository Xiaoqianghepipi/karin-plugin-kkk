{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ESNext",
    "baseUrl": ".",
    "paths": {
      "vue": [
        "node_modules/vue/dist/vue"
      ],
      "vitepress": [
        "node_modules/vitepress/types/index"
      ]
    },
  },
  "include": [
    "**/.vitepress/**/*.ts",
    "**/.vitepress/**/*.mts",
    "**/.vitepress/**/*.vue",
  ],
  "exclude": [
    "node_modules"
  ],
}