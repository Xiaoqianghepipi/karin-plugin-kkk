{
  "git": {
    "commit": false,
    "tag": false,
    "push": false,
    "tagName": "v${version}",
    "requireCleanWorkingDir": false
  },
  "versionSource": "package.json",
  "github": {
    "release": false
  },
  "npm": {
    "publish": false,
    "tag": "latest"
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "infile": "CHANGELOG.md",
      "preset": {
        "name": "conventionalcommits",
        "types": [
          {
            "type": "feat",
            "section": "✨ 新功能"
          },
          {
            "type": "fix",
            "section": "🐛 修复"
          },
          {
            "type": "style",
            "section": "🎨 代码风格"
          },
          {
            "type": "docs",
            "section": "📚 文档更新"
          },
          {
            "type": "chore",
            "section": "🔧 其他更新"
          },
          {
            "type": "refactor",
            "section": "♻️ 重构"
          },
          {
            "type": "perf",
            "section": "⚡ 性能优化"
          },
          {
            "type": "test",
            "section": "✅ 测试"
          },
          {
            "type": "ci",
            "section": "🔄 持续集成"
          },
          {
            "type": "build",
            "section": "🏗️ 构建系统"
          },
          {
            "type": "revert",
            "section": "⏪ 回滚"
          },
          {
            "type": "deps",
            "section": "📦 依赖更新"
          },
          {
            "type": "infra",
            "section": "🛠️ 基础设施"
          },
          {
            "type": "security",
            "section": "🔒 安全更新"
          },
          {
            "type": "env",
            "section": "🌍 环境变量更新"
          }
        ]
      },
      "header": "# 变更日志",
      "template": "{{#each commitGroups}}{{#if commits}}\n### {{title}}\n\n{{#each commits}}{{#unless header.match('[skip]')}}- {{header}}\n{{/unless}}{{/each}}\n{{/if}}{{/each}}"
    }
  }
}